      <%= link_to "서울", '#', :id => "seoul-region", :class => "region selected" %>
      <%= link_to "부산", '#', :id => "busan-region", :class => "region" %>
    </div>
    <div class="small-map-container">
      <a class="small-map selected" id="seoul-small-map" href="#">
