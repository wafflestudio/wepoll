    <div class="graph-stopper <%=index==0?"right":"left"%>"></div>
    <div id="p<%= index+1 %>-good-link" class="bar-graph politician-<%=politician.id %> good-links"
      data-color="#81d9fb,#60cbfa"
      data-total="<%= [@p1, @p2].inject(0) {|s,p| s + (p ? (p.good_link_count+p.bad_link_count) : 0)}  %>"
