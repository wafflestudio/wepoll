<div class="namecard<%=index==0 ? " alpha" : ""%>">
  <% unless politician.nil? -%>
    <% unless politician.tweet_name.nil? -%>
      <%= link_to forum_path(politician.tweet_name) do  %>
        <div class="tweet-bubble <%= index==0?"left":"right"%>">
          <%= tweet ? (tweet.content.length>100 ? (raw tweet.content[0..100].html_safe)+"..." : (raw tweet.content.html_safe) ) : "최근 트윗이 없습니다." %>
        </div>
      <% end -%>
    <% else -%>
      <div class="tweet-bubble <%= index==0?"left":"right"%>">
        후보의 트위터 아이디가 없습니다.
      </div>
    <% end -%>
  <% else -%>
      <div class="tweet-bubble <%= index==0?"left":"right"%>">
        후보자가 없습니다.
      </div>
  <% end -%>

  <div class="politician-photo-wrapper <%=index==0?"left":"right"%>">
    <%= image_tag politician && politician.profile_photo? ? politician.profile_photo.url(:square160) : "http://placehoold.it/160", :class => "photo" %>
    <div class="photo-frame"></div>
  </div>

  <dl id="<%= "politician#{(index==0 ?  1 : 2)}"%>" class="dropdown <%= index==0?"left":"right"%>">
    <% if politician -%>

    <dt><a><span class="value"><%=politician.id %></span><span class="party" style="color:<%= @party_color[politician.party]||"black" %>"><%= politician.party%></span>&nbsp;<span class="name"><%= politician.name %></span></a></dt>
    <% else -%>
    <dt><a href="#"><span class="name">후보없음</span></a></dt>
    <% end -%>
