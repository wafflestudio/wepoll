<div class="top-bar">
  <h1><%= @pledge.title %></h1>
</div>

<div class="table">
  <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
      <th colspan="2">공약정보</th>
    </tr>
    <tr>
      <td><strong>제목</strong></td>
      <td><%= @pledge.title %></td>
    </tr>
    <tr>
      <td><strong>내용</strong></td>
      <td>
        <%= simple_format @pledge.content %>
      </td>
    </tr>
    <tr>
      <td><strong>정치인</strong></td>
      <td>
        <%= link_to @pledge.politician.name, admin_politician_path(@pledge.politician) %>
      </td>
    </tr>

  </table>
</div>

<div class="actions">
  <%= link_to '목록', admin_pledges_path, :class => 'action list' %> | 
  <%= link_to '편집', edit_admin_pledge_path(@pledge), :class => 'action edit' %> | 
  <%= link_to '삭제', admin_pledge_path(@pledge), :method => :delete, :confirm => '정말 삭제하시겠습니까?', :class => 'action destroy' %>
</div>
